<div class="index-page">
  <% @articles.each do |article| %>
  <div class="my-card">
    <div class="image-card">
      <%= cl_image_tag article.photo.key,  crop: :fill %>
    </div>
    <div class="index-content">
      <%= link_to article_path(article) do  %>
      <div class= "titleIndex"> <%= article.title %></div>
      <% end %>
      <div class="divider"></div>
      <div class="index-tags">
        <% article.category.split(",").each do |cat| %>
        <p class="index-tag">#<%= cat %></p>
        <% end %>
      </div>
      <div class="index-text">
        <p> <%= article.content[0..150] %>...
          <a  href="articles/<%=article.id%>"><br>LIRE LA SUITE ?</a>
        </p>
      </div>
    </div>
    <div class="buttons-index">

      <%# BTN DElete %>
      <div class="buttonChou">
        <div id = "delete-btn">
          <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/Arrow_thecabbage_leaf-09_ipu2g2") %>
        </div>
        <div class = "btn-index"></div>
      </div>

      <%# BTN SAVE %>
      <div class="buttonChou">
        <%= link_to  article_interactions_path(article), method: "post" do %>
        <div id = "btn-readLater">
          <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/Arrow_thecabbage_leaf-05_yy0ug9") %>
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        </div>
        <div class = "btn-index"></div>
        <% end %>
      </div>

      <%# BTN Valider %>
      <div class="buttonChou">
        <%= link_to article_path(article) do  %>
        <div id = "btn-save">
          <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/Arrow_thecabbage_leaf-11_sro6wu")%>
          <% end %>
        </div>
        <div class = "btn-index"></div>
      </div>
    </div>
  </div>
  <% end %>
  <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/preview_q1r40p", class: "chouquette") %>
</div>
