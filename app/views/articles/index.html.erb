
<% @articles.each do |article| %>
<div class="index-page">


  <div class="index-card"> <%# 1carte %>
    <div class="image-card">
      <%= cl_image_tag article.photo.key,  crop: :fill %>
    </div>
    <div class="index-content">
      <%= link_to article_path(article) do  %>
        <div class= "title"> <%= article.title %></div>
      <% end %>
      <span class="divider"></span>
      <div class="index-tags">
        <% article.category.split(",").each do |cat| %>
        <p class="index-tag">#<%= cat %></p>
        <% end %>
      </div>
      <div class="index-text">
        <p> <%= article.content[0..200] %></p>
      </div>
    </div>
    <%# BTN DElete %>
    <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/Arrow_thecabbage_leaf-09_ipu2g2", width: 80) %>  
    <%# BTN SAVE %>
    <form action="/articles/<%=article.id%>/interactions" method="post">
      <button type="submit" class="btn-index-">
        <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/LOGO_Leaf-10_fblyxu", width: 80) %>
      </button>
       <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    </form>
    <%# BTN Valider %>
    <%= link_to article_path(article) do  %>
      <%= cl_image_tag("The Cabbage Leaf/LOGO - PICTO/Arrow_thecabbage_leaf-11_sro6wu", width: 80)%>
    <% end %>
  </div>



</div>
<% end %>